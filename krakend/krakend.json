{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "chetapp-gateway",
  "port": 8080,
  "cache_ttl": "1s",
  "timeout": "10s",
  "endpoints": [
    {
      "endpoint": "/gateway/api/auth/login",
      "method": "POST",
      "output_encoding": "no-op",
      "input_headers": ["Content-Type"],
      "backend": [
        {
          "url_pattern": "/api/v1/auth/login",
          "host": ["http://auth:8080"],
          "method": "POST",
          "encoding": "json",
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/gateway/api/auth/verify",
      "method": "GET",
      "output_encoding": "no-op",
      "input_headers": ["Content-Type", "Authorization"],
      "backend": [
        {
          "url_pattern": "/api/v1/auth/verify",
          "host": ["http://auth:8080"],
          "method": "GET",
          "encoding": "json",
          "disable_host_sanitize": false
        }
      ]
    }
  ],
  "output_encoding": "json"
}
