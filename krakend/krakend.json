{
  "version": 3,
  "name": "Chetapp API Gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "debug_endpoint": true,
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/auth/health",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/health",
          "encoding": "json",
          "method": "GET",
          "host": ["auth:8000"],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/auth/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/login",
          "encoding": "json",
          "method": "POST",
          "host": ["auth:8000"],
          "disable_host_sanitize": false
        }
      ]
    }
  ],
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allow_headers": ["Origin", "Authorization", "Content-Type"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h"
    }
  }
}
